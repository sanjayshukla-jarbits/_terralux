{
  "process_info": {
    "name": "Data Acquisition Only - Fail Fast",
    "version": "1.0.0-failfast",
    "application_type": "data_acquisition",
    "description": "Optimized data acquisition workflow for rapid development and testing. Includes satellite imagery, DEM data, and local files discovery with comprehensive validation.",
    "author": "Orchestrator Development Team",
    "created_date": "2025-07-30T00:00:00Z",
    "modified_date": "2025-07-30T00:00:00Z",
    "tags": [
      "data_acquisition",
      "fail_fast",
      "development",
      "testing",
      "satellite",
      "dem",
      "validation"
    ],
    "estimated_execution_time": "5-10 minutes",
    "resource_requirements": {
      "memory": "512MB",
      "cpu_cores": 2,
      "disk_space": "500MB",
      "network_required": true
    },
    "compatibility": {
      "python_version": ">=3.8",
      "orchestrator_version": ">=1.0.0",
      "fail_fast_compatible": true
    }
  },

  "global_config": {
    "template_variables": {
      "bbox": "{bbox}",
      "start_date": "{start_date}",
      "end_date": "{end_date}",
      "area_name": "{area_name}",
      "output_dir": "{output_dir}",
      "local_data_path": "{local_data_path}"
    },
    "default_values": {
      "bbox": [85.30, 27.60, 85.32, 27.62],
      "start_date": "2023-06-01",
      "end_date": "2023-06-07",
      "area_name": "fail_fast_test",
      "output_dir": "outputs/fail_fast_test/data_acquisition",
      "local_data_path": "/tmp/test_data"
    },
    "output_directory": "outputs/{area_name}/data_acquisition",
    "temp_directory": "temp/{area_name}",
    "log_level": "INFO",
    "error_handling": {
      "strategy": "continue_on_error",
      "retry_attempts": 1,
      "retry_delay": 10,
      "fallback_to_mock": true,
      "fail_fast_on_critical": false
    },
    "performance_optimization": {
      "enable_caching": true,
      "parallel_processing": false,
      "max_workers": 1,
      "timeout_buffer": 1.2,
      "memory_efficient": true
    },
    "data_quality": {
      "validate_outputs": true,
      "check_spatial_bounds": true,
      "verify_temporal_coverage": true,
      "quality_level": "basic"
    },
    "testing": {
      "fail_fast_mode": true,
      "mock_data_enabled": true,
      "validation_level": "basic",
      "performance_monitoring": true,
      "auto_cleanup": true
    }
  },

  "steps": [
    {
      "id": "acquire_sentinel_data",
      "name": "Sentinel-2 Data Acquisition",
      "type": "sentinel_hub_acquisition",
      "description": "Acquire Sentinel-2 optical imagery with fail-fast optimization",
      "priority": 1,
      "hyperparameters": {
        "bbox": "{bbox}",
        "start_date": "{start_date}",
        "end_date": "{end_date}",
        "data_collection": "SENTINEL-2-L2A",
        "resolution": 60,
        "max_cloud_coverage": 50,
        "bands": ["B02", "B03", "B04", "B08"],
        "save_to_file": true,
        "output_format": "GeoTIFF",
        "crs": "EPSG:4326",
        "compression": "LZW",
        "use_mock_data": true,
        "mock_data_config": {
          "generate_if_unavailable": true,
          "mock_file_size": "10MB",
          "spatial_resolution": 60,
          "temporal_coverage": "complete"
        },
        "optimization": {
          "quick_mode": true,
          "cache_enabled": true,
          "parallel_download": false
        }
      },
      "inputs": {},
      "outputs": {
        "imagery_data": {
          "key": "sentinel_imagery",
          "type": "raster",
          "description": "Sentinel-2 multispectral imagery",
          "file_pattern": "sentinel_{area_name}_*.tif",
          "required": true
        },
        "metadata": {
          "key": "sentinel_metadata",
          "type": "json",
          "description": "Imagery acquisition metadata",
          "file_pattern": "sentinel_{area_name}_metadata.json",
          "required": true
        },
        "quality_report": {
          "key": "sentinel_quality",
          "type": "json",
          "description": "Data quality assessment",
          "file_pattern": "sentinel_{area_name}_quality.json",
          "required": false
        }
      },
      "dependencies": [],
      "condition": null,
      "timeout": 300,
      "retry_attempts": 1,
      "continue_on_failure": false,
      "fallback": {
        "strategy": "use_mock_data",
        "mock_data_path": "mock_data/sentinel_sample.tif"
      },
      "validation": {
        "spatial_bounds_check": true,
        "temporal_coverage_check": true,
        "band_count_check": true,
        "file_size_check": {
          "min_size_mb": 1,
          "max_size_mb": 100
        }
      }
    },

    {
      "id": "acquire_elevation_data",
      "name": "DEM Data Acquisition",
      "type": "dem_acquisition",
      "description": "Acquire digital elevation model with basic topographic derivatives",
      "priority": 1,
      "hyperparameters": {
        "bbox": "{bbox}",
        "source": "SRTM",
        "resolution": 90,
        "generate_derivatives": true,
        "derivatives": ["slope", "aspect"],
        "void_fill": false,
        "save_to_file": true,
        "output_format": "GeoTIFF",
        "crs": "EPSG:4326",
        "compression": "LZW",
        "use_mock_data": true,
        "mock_data_config": {
          "generate_if_unavailable": true,
          "elevation_range": [200, 8000],
          "add_noise": false,
          "spatial_resolution": 90
        },
        "optimization": {
          "quick_mode": true,
          "skip_void_fill": true,
          "basic_derivatives_only": true
        }
      },
      "inputs": {},
      "outputs": {
        "elevation_data": {
          "key": "dem_elevation",
          "type": "raster",
          "description": "Digital elevation model",
          "file_pattern": "dem_{area_name}.tif",
          "required": true
        },
        "topographic_derivatives": {
          "key": "topo_derivatives",
          "type": "raster_stack",
          "description": "Basic topographic derivative layers",
          "file_pattern": "{derivative}_{area_name}.tif",
          "required": false
        },
        "metadata": {
          "key": "dem_metadata",
          "type": "json",
          "description": "DEM acquisition and processing metadata",
          "file_pattern": "dem_{area_name}_metadata.json",
          "required": true
        }
      },
      "dependencies": [],
      "condition": null,
      "timeout": 240,
      "retry_attempts": 1,
      "continue_on_failure": false,
      "fallback": {
        "strategy": "use_mock_data",
        "mock_data_path": "mock_data/dem_sample.tif"
      },
      "validation": {
        "spatial_bounds_check": true,
        "elevation_range_check": {
          "min_elevation": -500,
          "max_elevation": 9000
        },
        "nodata_percentage_check": {
          "max_nodata_percent": 30
        }
      }
    },

    {
      "id": "discover_local_files",
      "name": "Local Files Discovery",
      "type": "local_files_discovery",
      "description": "Discover and validate local geospatial data files with mock generation",
      "priority": 2,
      "hyperparameters": {
        "base_path": "{local_data_path}",
        "file_patterns": ["*.tif", "*.tiff", "*.shp", "*.gpkg", "*.geojson"],
        "recursive": true,
        "validate_files": true,
        "load_metadata": true,
        "generate_mock_if_empty": true,
        "mock_file_count": 3,
        "mock_file_config": {
          "raster_files": 2,
          "vector_files": 1,
          "file_size_range": ["1MB", "5MB"],
          "spatial_extent": "{bbox}",
          "create_associated_files": true
        },
        "validation_config": {
          "check_spatial_reference": true,
          "check_file_integrity": true,
          "check_spatial_bounds": true,
          "quick_validation": true
        }
      },
      "inputs": {},
      "outputs": {
        "local_files": {
          "key": "discovered_files",
          "type": "file_list",
          "description": "List of discovered and validated local files",
          "file_pattern": "local_*.*",
          "required": false
        },
        "file_inventory": {
          "key": "file_inventory",
          "type": "json",
          "description": "Comprehensive inventory of discovered files",
          "file_pattern": "local_files_inventory_{area_name}.json",
          "required": true
        },
        "validation_report": {
          "key": "file_validation",
          "type": "json",
          "description": "File validation results and quality metrics",
          "file_pattern": "local_files_validation_{area_name}.json",
          "required": false
        }
      },
      "dependencies": [],
      "condition": null,
      "timeout": 120,
      "retry_attempts": 1,
      "continue_on_failure": true,
      "fallback": {
        "strategy": "generate_mock_files",
        "mock_file_count": 3
      },
      "validation": {
        "min_files_found": 0,
        "max_files_processed": 20,
        "file_size_limits": {
          "min_size_bytes": 1024,
          "max_size_mb": 100
        }
      }
    },

    {
      "id": "calculate_basic_indices",
      "name": "Basic Spectral Indices Calculation",
      "type": "spectral_indices_calculation",
      "description": "Calculate essential vegetation and water indices for rapid analysis",
      "priority": 3,
      "hyperparameters": {
        "indices": ["NDVI", "NDWI"],
        "save_individual_indices": true,
        "create_indices_stack": true,
        "output_format": "GeoTIFF",
        "compression": "LZW",
        "nodata_value": -9999,
        "data_type": "float32",
        "optimization": {
          "memory_efficient": true,
          "chunk_processing": true,
          "basic_indices_only": true
        }
      },
      "inputs": {
        "optical_data": {
          "source": "acquire_sentinel_data",
          "key": "imagery_data",
          "required": true
        }
      },
      "outputs": {
        "spectral_indices": {
          "key": "calculated_indices",
          "type": "raster_stack",
          "description": "Calculated spectral indices",
          "file_pattern": "{index}_{area_name}.tif",
          "required": true
        },
        "indices_stack": {
          "key": "indices_stack",
          "type": "raster",
          "description": "Combined indices stack",
          "file_pattern": "indices_stack_{area_name}.tif",
          "required": false
        },
        "statistics": {
          "key": "indices_statistics",
          "type": "json",
          "description": "Statistical summary of calculated indices",
          "file_pattern": "indices_stats_{area_name}.json",
          "required": false
        }
      },
      "dependencies": ["acquire_sentinel_data"],
      "condition": null,
      "timeout": 180,
      "retry_attempts": 1,
      "continue_on_failure": true,
      "validation": {
        "index_range_check": {
          "NDVI": {"min": -1.0, "max": 1.0},
          "NDWI": {"min": -1.0, "max": 1.0}
        },
        "statistics_check": true
      }
    },

    {
      "id": "validate_acquisition",
      "name": "Data Acquisition Validation",
      "type": "data_validation",
      "description": "Comprehensive validation of all acquired data with quality assessment",
      "priority": 4,
      "hyperparameters": {
        "validation_checks": [
          "spatial_bounds_match",
          "temporal_coverage_adequate",
          "data_quality_acceptable",
          "file_integrity_verified",
          "metadata_complete"
        ],
        "quality_thresholds": {
          "min_valid_pixels_percent": 70,
          "max_cloud_coverage_percent": 60,
          "spatial_accuracy_tolerance": 0.2,
          "temporal_coverage_threshold": 0.8,
          "completeness_threshold": 0.8
        },
        "generate_report": true,
        "save_validation_results": true,
        "create_summary": true,
        "validation_level": "basic",
        "fail_on_critical_errors": false
      },
      "inputs": {
        "imagery_data": {
          "source": "acquire_sentinel_data",
          "key": "imagery_data",
          "required": true
        },
        "elevation_data": {
          "source": "acquire_elevation_data",
          "key": "elevation_data",
          "required": true
        },
        "local_files": {
          "source": "discover_local_files",
          "key": "local_files",
          "required": false
        },
        "spectral_indices": {
          "source": "calculate_basic_indices",
          "key": "spectral_indices",
          "required": false
        }
      },
      "outputs": {
        "validation_report": {
          "key": "validation_results",
          "type": "json",
          "description": "Comprehensive data quality validation report",
          "file_pattern": "validation_report_{area_name}.json",
          "required": true
        },
        "quality_metrics": {
          "key": "quality_metrics",
          "type": "json",
          "description": "Quantitative quality metrics for all datasets",
          "file_pattern": "quality_metrics_{area_name}.json",
          "required": true
        },
        "validation_summary": {
          "key": "validation_summary",
          "type": "json",
          "description": "Executive summary of validation results",
          "file_pattern": "validation_summary_{area_name}.json",
          "required": true
        }
      },
      "dependencies": [
        "acquire_sentinel_data",
        "acquire_elevation_data",
        "discover_local_files",
        "calculate_basic_indices"
      ],
      "condition": null,
      "timeout": 180,
      "retry_attempts": 1,
      "continue_on_failure": false,
      "validation": {
        "report_completeness_check": true,
        "metrics_availability_check": true
      }
    },

    {
      "id": "generate_data_inventory",
      "name": "Data Inventory Generation",
      "type": "inventory_generation",
      "description": "Generate comprehensive inventory and catalog of all acquired data",
      "priority": 5,
      "hyperparameters": {
        "include_statistics": true,
        "include_spatial_index": true,
        "include_quality_metrics": true,
        "generate_preview_images": false,
        "output_format": "json",
        "create_catalog": true,
        "include_processing_history": true,
        "optimization": {
          "skip_previews": true,
          "basic_statistics": true,
          "lightweight_index": true
        }
      },
      "inputs": {
        "all_data": {
          "sources": [
            "acquire_sentinel_data",
            "acquire_elevation_data",
            "discover_local_files",
            "calculate_basic_indices",
            "validate_acquisition"
          ],
          "aggregate": true
        }
      },
      "outputs": {
        "data_inventory": {
          "key": "complete_inventory",
          "type": "json",
          "description": "Complete inventory of all acquired and processed data",
          "file_pattern": "data_inventory_{area_name}.json",
          "required": true
        },
        "data_catalog": {
          "key": "data_catalog",
          "type": "json",
          "description": "Structured data catalog with metadata",
          "file_pattern": "data_catalog_{area_name}.json",
          "required": true
        },
        "processing_summary": {
          "key": "processing_summary",
          "type": "json",
          "description": "Summary of processing steps and performance",
          "file_pattern": "processing_summary_{area_name}.json",
          "required": true
        }
      },
      "dependencies": [
        "acquire_sentinel_data",
        "acquire_elevation_data",
        "discover_local_files",
        "calculate_basic_indices",
        "validate_acquisition"
      ],
      "condition": null,
      "timeout": 120,
      "retry_attempts": 1,
      "continue_on_failure": false,
      "validation": {
        "inventory_completeness_check": true,
        "catalog_structure_check": true,
        "summary_generation_check": true
      }
    }
  ],

  "metadata": {
    "process_type": "data_acquisition_only",
    "complexity_level": "basic",
    "testing_purpose": true,
    "fail_fast_compatible": true,
    "mock_data_supported": true,
    "estimated_data_volume": "50MB-200MB",
    "coordinate_systems": ["EPSG:4326"],
    "data_sources": [
      "Sentinel-2",
      "SRTM",
      "Local Files"
    ],
    "output_formats": ["GeoTIFF", "JSON"],
    "processing_capabilities": [
      "satellite_data_acquisition",
      "dem_processing",
      "local_file_discovery",
      "spectral_indices_calculation",
      "data_validation",
      "inventory_generation"
    ],
    "optimization_features": [
      "reduced_resolution_for_speed",
      "limited_time_range",
      "mock_data_fallbacks",
      "basic_validation_only",
      "memory_efficient_processing",
      "parallel_disabled_for_simplicity"
    ],
    "development_notes": {
      "version": "fail-fast-optimized",
      "target_execution_time": "under_10_minutes",
      "resource_limits": "512MB_RAM_500MB_disk",
      "test_coverage": "comprehensive_data_acquisition",
      "validation_level": "basic_functional",
      "mock_data_strategy": "automatic_fallback",
      "error_handling": "continue_with_warnings"
    },
    "usage_scenarios": [
      "rapid_development_testing",
      "ci_cd_pipeline_validation",
      "development_environment_setup",
      "algorithm_prototyping",
      "data_availability_testing"
    ],
    "performance_benchmarks": {
      "target_execution_time_seconds": 600,
      "max_memory_usage_mb": 512,
      "max_disk_usage_mb": 500,
      "network_timeout_seconds": 300,
      "step_timeout_seconds": 300
    },
    "quality_expectations": {
      "data_completeness": "basic",
      "spatial_accuracy": "acceptable",
      "temporal_accuracy": "adequate",
      "processing_quality": "development_grade",
      "validation_thoroughness": "basic"
    }
  },

  "execution_profile": {
    "recommended_environment": {
      "python_version": "3.8+",
      "memory_gb": 1,
      "disk_space_gb": 1,
      "cpu_cores": 2,
      "network_bandwidth": "broadband"
    },
    "execution_order": [
      "acquire_sentinel_data",
      "acquire_elevation_data",
      "discover_local_files",
      "calculate_basic_indices",
      "validate_acquisition",
      "generate_data_inventory"
    ],
    "parallel_execution": {
      "enabled": false,
      "parallel_groups": [
        ["acquire_sentinel_data", "acquire_elevation_data"],
        ["discover_local_files"],
        ["calculate_basic_indices"],
        ["validate_acquisition"],
        ["generate_data_inventory"]
      ]
    },
    "optimization_settings": {
      "cache_intermediate_results": true,
      "use_mock_data_when_possible": true,
      "skip_expensive_validations": true,
      "memory_efficient_processing": true,
      "fast_fail_on_errors": false
    }
  },

  "validation_schema": {
    "version": "1.0.0",
    "required_sections": [
      "process_info",
      "global_config",
      "steps",
      "metadata"
    ],
    "step_validation": {
      "required_fields": ["id", "name", "type", "description", "outputs"],
      "optional_fields": ["inputs", "dependencies", "condition", "timeout"],
      "output_validation": {
        "required_output_fields": ["key", "type", "description"],
        "supported_output_types": ["raster", "vector", "json", "file_list", "raster_stack"]
      }
    },
    "dependency_validation": {
      "check_circular_dependencies": true,
      "validate_step_references": true,
      "check_input_output_compatibility": true
    }
  }
}
